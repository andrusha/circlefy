<!-- Title + description -->
<div id="title-desc-tooltip">
  <div id="tooltip-<#: this.id #>" class="tooltip-title-desc">
    <div class="bg">
    <h2><#: this.title #></h2>
    <div class="tooltip-content"><#: this.content #></div>
    </div>
  </div>
</div>

