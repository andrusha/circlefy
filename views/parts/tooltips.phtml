<!-- Title + description -->
<div id="title-desc-tooltip">
  <div id="tooltip-<#: this.id #>" class="tooltip-title-desc">
    <h2><#: this.title #></h2>
    <div class="tooltip-content"><#: this.content #></div>
  </div>
</div>

<!-- User/Group Tooltip -->
<div id="title-tooltip">
  <div id="tooltip-<#: this.id #>" class="tooltip-title">
    <h2><#: this.title #></h2>
  </div>
</div>